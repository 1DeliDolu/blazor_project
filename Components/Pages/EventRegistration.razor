@page "/event/{EventId:int}/register"
@using EventEase.Models
@using EventEase.Services
@using System.Linq
@inject EventService EventService
@inject UserSessionService UserSession
@inject RegistrationService RegistrationService
@inject NavigationManager Navigation

<PageTitle>Event Registration</PageTitle>

<div class="registration-container">
    @if (isLoading)
    {
        <p><em>Loading registration form...</em></p>
    }
    else if (eventItem == null)
    {
        <div class="error-message">
            <h2>Event Not Found</h2>
            <p>Unable to load registration form.</p>
            <button class="btn-back" @onclick="NavigateToEvents">Back to Events</button>
        </div>
    }
    else
    {
        <div class="registration-card">
            <div class="registration-header">
                <h1>Register for Event</h1>
                <h2>@eventItem.Name</h2>
                <p class="event-info">
                    üìÖ @eventItem.Date.ToString("MMMM dd, yyyy") | üìç @eventItem.Location
                </p>
            </div>

            @if (isRegistered)
            {
                <div class="success-message">
                    <div class="success-icon">‚úì</div>
                    <h3>Registration Successful!</h3>
                    <p>Thank you for registering, <strong>@registrationData.FullName</strong>!</p>
                    <p>A confirmation email has been sent to <strong>@registrationData.Email</strong></p>
                    @if (!string.IsNullOrEmpty(confirmationCode))
                    {
                        <div class="confirmation-code">
                            <p><strong>Confirmation Code:</strong></p>
                            <code>@confirmationCode</code>
                        </div>
                    }
                    <div class="success-actions">
                        <button class="btn-primary" @onclick="NavigateToEvents">Browse More Events</button>
                        <button class="btn-secondary" @onclick="NavigateToDetails">View Event Details</button>
                    </div>
                </div>
            }
            else
            {
                <div class="registration-form">
                    <div class="form-group">
                        <label for="fullName">Full Name *</label>
                        <input type="text" 
                               id="fullName" 
                               @bind="registrationData.FullName" 
                               placeholder="Enter your full name"
                               class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address *</label>
                        <input type="email" 
                               id="email" 
                               @bind="registrationData.Email" 
                               @bind:event="oninput"
                               placeholder="Enter your email"
                               class="form-control @(string.IsNullOrEmpty(registrationData.Email) || IsValidEmail(registrationData.Email) ? "" : "invalid")" />
                        @if (!string.IsNullOrEmpty(registrationData.Email) && !IsValidEmail(registrationData.Email))
                        {
                            <span class="validation-message">Please enter a valid email address</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number *</label>
                        <input type="tel" 
                               id="phone" 
                               @bind="registrationData.PhoneNumber" 
                               @bind:event="oninput"
                               placeholder="Enter your phone number"
                               class="form-control @(string.IsNullOrEmpty(registrationData.PhoneNumber) || IsValidPhoneNumber(registrationData.PhoneNumber) ? "" : "invalid")" />
                        @if (!string.IsNullOrEmpty(registrationData.PhoneNumber) && !IsValidPhoneNumber(registrationData.PhoneNumber))
                        {
                            <span class="validation-message">Please enter a valid phone number (7-15 digits)</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="numberOfTickets">Number of Tickets *</label>
                        <input type="number" 
                               id="numberOfTickets" 
                               @bind="registrationData.NumberOfTickets" 
                               min="1" 
                               max="10"
                               class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="specialRequests">Special Requests (Optional)</label>
                        <textarea id="specialRequests" 
                                  @bind="registrationData.SpecialRequests" 
                                  rows="4"
                                  placeholder="Any special requirements or dietary restrictions?"
                                  class="form-control"></textarea>
                    </div>

                    <div class="form-group checkbox-group">
                        <label>
                            <input type="checkbox" @bind="registrationData.AcceptTerms" />
                            I accept the terms and conditions *
                        </label>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="error-alert">
                            @errorMessage
                        </div>
                    }

                    <div class="form-actions">
                        <button class="btn-submit" @onclick="SubmitRegistration" disabled="@(!IsFormValid())">
                            Complete Registration
                        </button>
                        <button class="btn-cancel" @onclick="NavigateToDetails">
                            Cancel
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int EventId { get; set; }

    private Event? eventItem;
    private bool isLoading = true;
    private bool isRegistered = false;
    private string errorMessage = string.Empty;
    private string confirmationCode = string.Empty;

    private RegistrationData registrationData = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadEventDetails();
        
        // Pre-fill form if user is logged in
        var currentUser = UserSession.GetCurrentUser();
        if (currentUser != null)
        {
            registrationData.FullName = currentUser.FullName;
            registrationData.Email = currentUser.Email;
            registrationData.PhoneNumber = currentUser.PhoneNumber;
        }
    }

    private async Task LoadEventDetails()
    {
        isLoading = true;
        eventItem = await EventService.GetEventByIdAsync(EventId);
        isLoading = false;
    }

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(registrationData.FullName) &&
               IsValidEmail(registrationData.Email) &&
               IsValidPhoneNumber(registrationData.PhoneNumber) &&
               registrationData.NumberOfTickets > 0 &&
               registrationData.NumberOfTickets <= 10 &&
               registrationData.AcceptTerms;
    }

    private bool IsValidEmail(string email)
    {
        if (string.IsNullOrWhiteSpace(email))
            return false;

        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private bool IsValidPhoneNumber(string phoneNumber)
    {
        if (string.IsNullOrWhiteSpace(phoneNumber))
            return false;

        // Remove common separators
        var cleanedNumber = phoneNumber.Replace("-", "").Replace("(", "").Replace(")", "").Replace(" ", "");
        
        // Check if it contains only digits and has reasonable length (7-15 digits)
        return cleanedNumber.All(char.IsDigit) && cleanedNumber.Length >= 7 && cleanedNumber.Length <= 15;
    }

    private async Task SubmitRegistration()
    {
        if (!IsFormValid())
        {
            errorMessage = "Please fill in all required fields and accept the terms.";
            return;
        }

        try
        {
            var currentUser = UserSession.GetCurrentUser();
            var userId = currentUser?.Id ?? 0;

            var registration = new Registration
            {
                EventId = EventId,
                UserId = userId,
                FullName = registrationData.FullName,
                Email = registrationData.Email,
                PhoneNumber = registrationData.PhoneNumber,
                NumberOfTickets = registrationData.NumberOfTickets,
                SpecialRequests = registrationData.SpecialRequests
            };

            var result = await RegistrationService.CreateRegistrationAsync(registration);

            if (result != null)
            {
                confirmationCode = result.ConfirmationCode;
                
                // Add to user's registered events if logged in
                if (currentUser != null)
                {
                    UserSession.AddRegistration(EventId);
                }

                isRegistered = true;
                errorMessage = string.Empty;
            }
            else
            {
                errorMessage = "You have already registered for this event.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Registration failed: {ex.Message}";
        }
    }

    private void NavigateToEvents()
    {
        Navigation.NavigateTo("/events");
    }

    private void NavigateToDetails()
    {
        Navigation.NavigateTo($"/event/{EventId}");
    }

    private class RegistrationData
    {
        public string FullName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string PhoneNumber { get; set; } = string.Empty;
        public int NumberOfTickets { get; set; } = 1;
        public string SpecialRequests { get; set; } = string.Empty;
        public bool AcceptTerms { get; set; } = false;
    }
}


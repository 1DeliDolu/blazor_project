@page "/events"
@using EventEase.Models
@using EventEase.Services
@inject EventService EventService
@inject UserSessionService UserSession
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Events</PageTitle>

<div class="events-container">
    <div class="page-header">
        <h1>üéâ Browse Events</h1>
        @if (UserSession.IsUserLoggedIn())
        {
            <p class="welcome-text">Welcome back, <strong>@UserSession.GetCurrentUser()?.FirstName</strong>!</p>
        }
    </div>
    
    @if (hasError)
    {
        <CustomErrorDisplay 
            ErrorMessage="@errorMessage" 
            OnRecover="RetryLoadEvents" />
    }
    else
    {
        <div class="filter-section">
            <label for="categoryFilter">Filter by Category:</label>
            <select id="categoryFilter" @bind="selectedCategory" @bind:after="FilterEvents">
                <option value="">All Categories</option>
                <option value="Technology">Technology</option>
                <option value="Business">Business</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Education">Education</option>
            </select>
        </div>

        @if (isLoading)
        {
            <p><em>Loading events...</em></p>
        }
        else if (displayedEvents.Any())
        {
            <div class="events-grid">
                @foreach (var eventItem in displayedEvents)
                {
                    <div class="event-card-wrapper" @key="eventItem.Id">
                        <div class="event-card" @onclick="() => ViewEventDetails(eventItem.Id)">
                            <div class="event-header">
                                <h3>@eventItem.Name</h3>
                                @if (UserSession.IsUserLoggedIn())
                                {
                                    <button class="favorite-btn @(UserSession.IsFavorite(eventItem.Id) ? "active" : "")"
                                            @onclick:stopPropagation="true"
                                            @onclick="() => ToggleFavorite(eventItem.Id)">
                                        @(UserSession.IsFavorite(eventItem.Id) ? "‚ù§Ô∏è" : "ü§ç")
                                    </button>
                                }
                            </div>
                            <p class="event-date">üìÖ @eventItem.Date.ToString("MMMM dd, yyyy")</p>
                            <p class="event-location">üìç @eventItem.Location</p>
                            <p class="event-description">@eventItem.Description</p>
                            <div class="event-footer">
                                <span class="event-category">@eventItem.Category</span>
                                @if (UserSession.IsRegistered(eventItem.Id))
                                {
                                    <span class="registered-badge">‚úÖ Registered</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-events">No events found.</p>
        }
    }
</div>

@code {
    private List<Event> allEvents = new();
    private List<Event> displayedEvents = new();
    private string selectedCategory = string.Empty;
    private bool isLoading = true;
    private bool hasError = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        UserSession.OnChange += StateHasChanged;
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        try
        {
            isLoading = true;
            hasError = false;
            allEvents = await EventService.GetAllEventsAsync();
            displayedEvents = allEvents;
            isLoading = false;
        }
        catch (Exception)
        {
            isLoading = false;
            hasError = true;
            errorMessage = "Failed to load events. Please try again.";
        }
    }

    private async Task RetryLoadEvents()
    {
        await LoadEvents();
    }

    private async Task FilterEvents()
    {
        try
        {
            if (string.IsNullOrEmpty(selectedCategory))
            {
                displayedEvents = allEvents;
            }
            else
            {
                displayedEvents = await EventService.GetEventsByCategoryAsync(selectedCategory);
            }
        }
        catch (Exception)
        {
            hasError = true;
            errorMessage = "Failed to filter events. Please try again.";
        }
    }

    private void ViewEventDetails(int eventId)
    {
        Navigation.NavigateTo($"/event/{eventId}");
    }

    private void ToggleFavorite(int eventId)
    {
        if (!UserSession.IsUserLoggedIn())
        {
            Navigation.NavigateTo($"/login?returnUrl=/events");
            return;
        }

        if (UserSession.IsFavorite(eventId))
        {
            UserSession.RemoveFromFavorites(eventId);
        }
        else
        {
            UserSession.AddToFavorites(eventId);
        }
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}

<style>
    .events-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .page-header h1 {
        color: #333;
        margin-bottom: 10px;
    }

    .welcome-text {
        color: #666;
        font-size: 16px;
    }

    .filter-section {
        margin-bottom: 30px;
        text-align: center;
    }

    .filter-section label {
        margin-right: 10px;
        font-weight: bold;
    }

    .filter-section select {
        padding: 8px 15px;
        border: 2px solid #ddd;
        border-radius: 6px;
        font-size: 1rem;
        transition: border-color 0.3s;
    }

    .filter-section select:focus {
        outline: none;
        border-color: #667eea;
    }

    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 24px;
    }

    .event-card {
        background: white;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        padding: 24px;
        cursor: pointer;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        border-color: #667eea;
    }

    .event-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 12px;
    }

    .event-header h3 {
        margin: 0;
        color: #333;
        font-size: 20px;
        flex: 1;
    }

    .favorite-btn {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        padding: 0;
        margin-left: 12px;
        transition: transform 0.2s;
    }

    .favorite-btn:hover {
        transform: scale(1.2);
    }

    .favorite-btn.active {
        animation: heartbeat 0.3s ease;
    }

    @@keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        25% { transform: scale(1.3); }
        50% { transform: scale(1.1); }
    }

    .event-date, .event-location {
        margin: 8px 0;
        color: #666;
        font-size: 14px;
    }

    .event-description {
        margin: 12px 0;
        color: #555;
        font-size: 14px;
        line-height: 1.5;
        flex: 1;
    }

    .event-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid #e0e0e0;
    }

    .event-category {
        background: #667eea;
        color: white;
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 600;
    }

    .registered-badge {
        background: #28a745;
        color: white;
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 600;
    }

    .no-events {
        text-align: center;
        font-size: 1.2rem;
        color: #666;
        margin-top: 50px;
    }
</style>

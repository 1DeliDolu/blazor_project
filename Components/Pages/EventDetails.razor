        transition: all 0.3s;
    }

    .btn-register {
        background-color: #28a745;
        color: white;
    }

    .btn-register:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

    .btn-back:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .error-message {
        text-align: center;
        padding: 50px;
    }

    .error-message h2 {
        color: #dc3545;
        margin-bottom: 15px;
    }
</style>

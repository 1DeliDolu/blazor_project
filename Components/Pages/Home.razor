@page "/"
@inject NavigationManager Navigation

<PageTitle>EventEase - Home</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1>Welcome to EventEase</h1>
        <p class="hero-subtitle">Your Premier Event Management Solution</p>
        <p class="hero-description">
            Discover and register for amazing corporate and social events. 
            Browse our curated selection of events and secure your spot today!
        </p>
        <button class="btn-hero" @onclick="NavigateToEvents">
            Browse Events →
        </button>
    </div>

    <div class="features-section">
        <h2>Why Choose EventEase?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <span class="feature-icon">🎯</span>
                <h3>Easy Discovery</h3>
                <p>Browse through a wide variety of events with detailed information</p>
            </div>
            <div class="feature-card">
                <span class="feature-icon">📅</span>
                <h3>Quick Registration</h3>
                <p>Register for events in just a few clicks with our streamlined process</p>
            </div>
            <div class="feature-card">
                <span class="feature-icon">🔔</span>
                <h3>Stay Updated</h3>
                <p>Get instant notifications about event updates and reminders</p>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToEvents()
    {
        Navigation.NavigateTo("/events");
    }
}

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .hero-section {
        text-align: center;
        padding: 60px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 50px;
    }

    .hero-section h1 {
        font-size: 3rem;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 20px;
        opacity: 0.9;
    }

    .hero-description {
        font-size: 1.1rem;
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    .btn-hero {
        background-color: white;
        color: #667eea;
        border: none;
        padding: 15px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }

    .features-section {
        padding: 40px 20px;
    }

    .features-section h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 40px;
        color: #333;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .feature-card {
        background: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    }

    .feature-icon {
        font-size: 3rem;
        display: block;
        margin-bottom: 15px;
    }

    .feature-card h3 {
        color: #667eea;
        margin-bottom: 10px;
        font-size: 1.3rem;
    }

    .feature-card p {
        color: #666;
        line-height: 1.6;
    }
</style>


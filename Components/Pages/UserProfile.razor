@page "/profile"
@using EventEase.Models
@using EventEase.Services
@inject UserSessionService UserSession
@inject EventService EventService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>My Profile - EventEase</PageTitle>

@if (currentUser == null)
{
    <div class="auth-prompt">
        <div class="auth-card">
            <h2>üîí Authentication Required</h2>
            <p>Please login to view your profile</p>
            <a href="/login?returnUrl=/profile" class="btn btn-primary">Login</a>
            <p class="register-link">Don't have an account? <a href="/register">Register here</a></p>
        </div>
    </div>
}
else
{
    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-avatar">
                @GetInitials(currentUser.FirstName, currentUser.LastName)
            </div>
            <div class="profile-info">
                <h1>@currentUser.FullName</h1>
                <p class="profile-email">@currentUser.Email</p>
                <p class="profile-joined">Member since @currentUser.CreatedAt.ToString("MMMM yyyy")</p>
            </div>
            <button @onclick="HandleLogout" class="btn btn-logout">Logout</button>
        </div>

        <div class="profile-content">
            <div class="profile-section">
                <h2>üìã Personal Information</h2>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">First Name:</span>
                        <span class="info-value">@currentUser.FirstName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Last Name:</span>
                        <span class="info-value">@currentUser.LastName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value">@currentUser.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Phone:</span>
                        <span class="info-value">@currentUser.PhoneNumber</span>
                    </div>
                </div>
                <button class="btn btn-secondary" disabled>Edit Profile (Coming Soon)</button>
            </div>

            <div class="profile-section">
                <h2>‚öôÔ∏è Preferences</h2>
                <div class="preferences-grid">
                    <div class="preference-item">
                        <span class="pref-label">üìß Email Notifications:</span>
                        <span class="pref-value">@(currentUser.Preferences.EmailNotifications ? "Enabled" : "Disabled")</span>
                    </div>
                    <div class="preference-item">
                        <span class="pref-label">üì± SMS Notifications:</span>
                        <span class="pref-value">@(currentUser.Preferences.SmsNotifications ? "Enabled" : "Disabled")</span>
                    </div>
                    <div class="preference-item">
                        <span class="pref-label">üé® Theme:</span>
                        <span class="pref-value">@currentUser.Preferences.Theme</span>
                    </div>
                    <div class="preference-item">
                        <span class="pref-label">üåç Language:</span>
                        <span class="pref-value">@currentUser.Preferences.Language</span>
                    </div>
                </div>
                @if (currentUser.Preferences.PreferredCategories.Any())
                {
                    <div class="preferred-categories">
                        <p class="pref-label">Preferred Categories:</p>
                        <div class="categories-tags">
                            @foreach (var category in currentUser.Preferences.PreferredCategories)
                            {
                                <span class="category-tag">@category</span>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="profile-section">
                <h2>‚ù§Ô∏è Favorite Events (@favoriteEvents.Count)</h2>
                @if (favoriteEvents.Any())
                {
                    <div class="events-grid">
                        @foreach (var eventItem in favoriteEvents)
                        {
                            <div class="event-card" @onclick='() => Navigation.NavigateTo($"/events/{eventItem.Id}")'>
                                <h3>@eventItem.Name</h3>
                                <p class="event-date">üìÖ @eventItem.Date.ToString("MMM dd, yyyy")</p>
                                <p class="event-location">üìç @eventItem.Location</p>
                                <span class="event-category">@eventItem.Category</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>No favorite events yet</p>
                        <a href="/events" class="btn btn-primary">Browse Events</a>
                    </div>
                }
            </div>

            <div class="profile-section">
                <h2>üé´ Registered Events (@registeredEvents.Count)</h2>
                @if (registeredEvents.Any())
                {
                    <div class="events-grid">
                        @foreach (var eventItem in registeredEvents)
                        {
                            <div class="event-card registered" @onclick='() => Navigation.NavigateTo($"/events/{eventItem.Id}")'>
                                <h3>@eventItem.Name</h3>
                                <p class="event-date">üìÖ @eventItem.Date.ToString("MMM dd, yyyy")</p>
                                <p class="event-location">üìç @eventItem.Location</p>
                                <span class="event-category">@eventItem.Category</span>
                                <span class="registered-badge">‚úÖ Registered</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>No registered events yet</p>
                        <a href="/events" class="btn btn-primary">Browse Events</a>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    private User? currentUser;
    private List<Event> favoriteEvents = new();
    private List<Event> registeredEvents = new();

    protected override async Task OnInitializedAsync()
    {
        UserSession.OnChange += StateHasChanged;
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        currentUser = UserSession.GetCurrentUser();
        
        if (currentUser != null)
        {
            var allEvents = await EventService.GetAllEventsAsync();
            
            favoriteEvents = allEvents
                .Where(e => currentUser.FavoriteEventIds.Contains(e.Id))
                .ToList();
            
            registeredEvents = allEvents
                .Where(e => currentUser.RegisteredEventIds.Contains(e.Id))
                .ToList();
        }
    }

    private string GetInitials(string firstName, string lastName)
    {
        var firstInitial = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString().ToUpper() : "";
        var lastInitial = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString().ToUpper() : "";
        return firstInitial + lastInitial;
    }

    private void HandleLogout()
    {
        UserSession.Logout();
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}


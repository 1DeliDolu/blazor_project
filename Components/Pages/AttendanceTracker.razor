@page "/attendance"
@using EventEase.Models
@using EventEase.Services
@inject UserSessionService UserSession
@inject EventService EventService
@inject RegistrationService RegistrationService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Attendance Tracker - EventEase</PageTitle>

@if (!UserSession.IsUserLoggedIn())
{
    <div class="auth-prompt">
        <div class="auth-card">
            <h2>üîí Authentication Required</h2>
            <p>Please login to track event attendance</p>
            <a href="/login?returnUrl=/attendance" class="btn btn-primary">Login</a>
        </div>
    </div>
}
else
{
    <div class="attendance-container">
        <h1>üìä Event Attendance Tracker</h1>
        <p class="subtitle">Monitor participation across all events</p>

        @if (isLoading)
        {
            <div class="loading-state">
                <p>Loading attendance data...</p>
            </div>
        }
        else
        {
            <div class="stats-grid">
                <div class="stat-card total">
                    <div class="stat-icon">üé´</div>
                    <div class="stat-content">
                        <h3>@totalRegistrations</h3>
                        <p>Total Registrations</p>
                    </div>
                </div>

                <div class="stat-card confirmed">
                    <div class="stat-icon">‚úÖ</div>
                    <div class="stat-content">
                        <h3>@confirmedCount</h3>
                        <p>Confirmed</p>
                    </div>
                </div>

                <div class="stat-card attended">
                    <div class="stat-icon">üë•</div>
                    <div class="stat-content">
                        <h3>@attendedCount</h3>
                        <p>Attended</p>
                    </div>
                </div>

                <div class="stat-card cancelled">
                    <div class="stat-icon">‚ùå</div>
                    <div class="stat-content">
                        <h3>@cancelledCount</h3>
                        <p>Cancelled</p>
                    </div>
                </div>
            </div>

            <div class="filter-section">
                <label for="statusFilter">Filter by Status:</label>
                <select id="statusFilter" @bind="selectedStatus" @bind:after="FilterRegistrations">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Attended">Attended</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="NoShow">No Show</option>
                </select>

                <label for="eventFilter" style="margin-left: 20px;">Filter by Event:</label>
                <select id="eventFilter" @bind="selectedEventId" @bind:after="FilterRegistrations">
                    <option value="0">All Events</option>
                    @foreach (var evt in allEvents)
                    {
                        <option value="@evt.Id">@evt.Name</option>
                    }
                </select>
            </div>

            @if (filteredRegistrations.Any())
            {
                <div class="registrations-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Event</th>
                                <th>Attendee</th>
                                <th>Email</th>
                                <th>Tickets</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registration in filteredRegistrations)
                            {
                                var eventItem = allEvents.FirstOrDefault(e => e.Id == registration.EventId);
                                <tr class="@GetRowClass(registration.Status)">
                                    <td>
                                        <strong>@(eventItem?.Name ?? "Unknown Event")</strong>
                                        <br />
                                        <small>@(eventItem?.Date.ToString("MMM dd, yyyy") ?? "")</small>
                                    </td>
                                    <td>@registration.FullName</td>
                                    <td>@registration.Email</td>
                                    <td class="text-center">@registration.NumberOfTickets</td>
                                    <td>@registration.RegistrationDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <span class="status-badge @registration.Status.ToString().ToLower()">
                                            @GetStatusIcon(registration.Status) @registration.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (registration.Status == RegistrationStatus.Confirmed)
                                            {
                                                <button class="btn-action attend" @onclick="() => MarkAsAttended(registration.Id)">
                                                    Mark Attended
                                                </button>
                                            }
                                            @if (registration.Status == RegistrationStatus.Pending)
                                            {
                                                <button class="btn-action confirm" @onclick="() => ConfirmRegistration(registration.Id)">
                                                    Confirm
                                                </button>
                                            }
                                            @if (registration.Status != RegistrationStatus.Cancelled)
                                            {
                                                <button class="btn-action cancel" @onclick="() => CancelRegistration(registration.Id)">
                                                    Cancel
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="attendance-summary">
                    <h3>Attendance Summary</h3>
                    <p>Showing @filteredRegistrations.Count of @allRegistrations.Count registrations</p>
                    @if (selectedEventId > 0)
                    {
                        var eventItem = allEvents.FirstOrDefault(e => e.Id == selectedEventId);
                        var eventRegs = allRegistrations.Where(r => r.EventId == selectedEventId).ToList();
                        var totalTickets = eventRegs.Sum(r => r.NumberOfTickets);
                        <div class="event-summary">
                            <h4>@(eventItem?.Name ?? "Unknown Event")</h4>
                            <p>üìä Total Registrations: @eventRegs.Count | üé´ Total Tickets: @totalTickets</p>
                            <p>‚úÖ Confirmed: @eventRegs.Count(r => r.Status == RegistrationStatus.Confirmed) | 
                               üë• Attended: @eventRegs.Count(r => r.Status == RegistrationStatus.Attended)</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <p>No registrations found with the selected filters.</p>
                </div>
            }
        }
    </div>
}

@code {
    private List<Registration> allRegistrations = new();
    private List<Registration> filteredRegistrations = new();
    private List<Event> allEvents = new();
    private bool isLoading = true;

    private string selectedStatus = string.Empty;
    private int selectedEventId = 0;

    private int totalRegistrations = 0;
    private int confirmedCount = 0;
    private int attendedCount = 0;
    private int cancelledCount = 0;

    protected override async Task OnInitializedAsync()
    {
        UserSession.OnChange += StateHasChanged;
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;

        try
        {
            allEvents = await EventService.GetAllEventsAsync();
            
            var currentUser = UserSession.GetCurrentUser();
            if (currentUser != null)
            {
                // Load all registrations (in a real app, this would be admin-only)
                allRegistrations = new List<Registration>();
                foreach (var evt in allEvents)
                {
                    var eventRegs = await RegistrationService.GetEventRegistrationsAsync(evt.Id);
                    allRegistrations.AddRange(eventRegs);
                }

                filteredRegistrations = allRegistrations;
                UpdateStatistics();
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterRegistrations()
    {
        filteredRegistrations = allRegistrations;

        if (!string.IsNullOrEmpty(selectedStatus))
        {
            if (Enum.TryParse<RegistrationStatus>(selectedStatus, out var status))
            {
                filteredRegistrations = filteredRegistrations.Where(r => r.Status == status).ToList();
            }
        }

        if (selectedEventId > 0)
        {
            filteredRegistrations = filteredRegistrations.Where(r => r.EventId == selectedEventId).ToList();
        }
    }

    private void UpdateStatistics()
    {
        totalRegistrations = allRegistrations.Count;
        confirmedCount = allRegistrations.Count(r => r.Status == RegistrationStatus.Confirmed);
        attendedCount = allRegistrations.Count(r => r.Status == RegistrationStatus.Attended);
        cancelledCount = allRegistrations.Count(r => r.Status == RegistrationStatus.Cancelled);
    }

    private async Task MarkAsAttended(int registrationId)
    {
        await RegistrationService.UpdateRegistrationStatusAsync(registrationId, RegistrationStatus.Attended);
        await LoadData();
    }

    private async Task ConfirmRegistration(int registrationId)
    {
        await RegistrationService.UpdateRegistrationStatusAsync(registrationId, RegistrationStatus.Confirmed);
        await LoadData();
    }

    private async Task CancelRegistration(int registrationId)
    {
        await RegistrationService.CancelRegistrationAsync(registrationId);
        await LoadData();
    }

    private string GetRowClass(RegistrationStatus status)
    {
        return status switch
        {
            RegistrationStatus.Attended => "row-attended",
            RegistrationStatus.Cancelled => "row-cancelled",
            RegistrationStatus.Confirmed => "row-confirmed",
            _ => ""
        };
    }

    private string GetStatusIcon(RegistrationStatus status)
    {
        return status switch
        {
            RegistrationStatus.Pending => "‚è≥",
            RegistrationStatus.Confirmed => "‚úÖ",
            RegistrationStatus.Attended => "üë•",
            RegistrationStatus.Cancelled => "‚ùå",
            RegistrationStatus.NoShow => "‚ö†Ô∏è",
            _ => "‚ùì"
        };
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}


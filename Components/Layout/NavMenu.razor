@using EventEase.Services
@inject UserSessionService UserSession
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventEase</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events">
                <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Events
            </NavLink>
        </div>

        @if (UserSession.IsUserLoggedIn())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="attendance">
                    <span class="bi bi-clipboard-check-nav-menu" aria-hidden="true"></span> Attendance
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> My Profile
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        UserSession.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}

